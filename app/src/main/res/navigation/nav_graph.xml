<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/Day1Fragment">

    <fragment
        android:id="@+id/Day1Fragment"
        android:name="com.livexlive.adventapp.Day1Fragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_day_1">
        <action
            android:id="@+id/action_Day1Fragment_to_Day2Fragment"
            app:destination="@id/Day2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/Day2Fragment"
        android:name="com.livexlive.adventapp.Day2Fragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_day_2">
        <action
            android:id="@+id/action_Day2Fragment_to_Day3Fragment"
            app:destination="@id/Day3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/Day3Fragment"
        android:name="com.livexlive.adventapp.Day3Fragment"
        android:label="fragment_day_3"
        tools:layout="@layout/fragment_day_3" />
</navigation>